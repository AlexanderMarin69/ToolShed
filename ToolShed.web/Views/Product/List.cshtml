@model ProductListViewModel


@foreach (var p in Model.Products)
{
    <h2><strong>@p.Name</strong></h2>
    <br />
    <p>@p.Description</p>
    <br />
    <p>@($"Pris: {p.Price:C2}")</p>

    <hr />
    <br><br>
}

<div page-model="@Model.Pager" page-action="List"
         enable-page-classes="true"
         page-class="btn"
         page-class-normal="btn-default"
         page-class-selected="btn-primary"
         class="btn-group">
    </div>